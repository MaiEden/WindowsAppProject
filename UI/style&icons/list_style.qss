/*Cards*/
QFrame#Card {
    background: #ffffff;
    border-radius: 16px;
    border: 1px solid rgba(0,0,0,0.06);
}

/* Give all labels inside the card some comfortable horizontal padding */
QFrame#Card QLabel {
    padding-left: 12px;
    padding-right: 12px;
}

/* Card image */
QLabel#CardImage {
    background: #f5f7fa;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
    padding: 0; /* image spans full width */
}

/* Larger title */
QLabel#CardTitle {
    font-size: 15px;
    font-weight: 600;
    color: #1f2937; /* gray-800 */
}

/* Smaller, subtler subtitle */
QLabel#CardSubtitle {
    font-size: 13px;
    color: #6b7280; /* gray-500 */
}

/* Region label */
QLabel#Region {
    font-size: 12px;
    color: #374151; /* gray-700 */
}

/* Subtle hover effect for the card */
QFrame#Card:hover {
    border-color: rgba(0,0,0,0.10);
}

/* =========================
   Toolbar (search / category / checkbox / button)
   ========================= */
QLineEdit {
    padding: 8px 12px;
    border-radius: 10px;
    border: 1px solid #d1d5db;
    background: #ffffff;
    selection-background-color: #bfdbfe; /* light blue selection */
}
QLineEdit:hover { border-color: #9ca3af; }
QLineEdit:focus { border: 1px solid #93c5fd; }

QComboBox {
    padding: 6px 10px;
    border-radius: 10px;
    border: 1px solid #d1d5db;
    background: #ffffff;
}
QComboBox:hover { border-color: #9ca3af; }
QComboBox:focus { border-color: #93c5fd; }

QComboBox QAbstractItemView {
    border: 1px solid #d1d5db;
    background: #ffffff;
    selection-background-color: #e5e7eb;
    outline: 0;
}

QCheckBox { spacing: 6px; }
QCheckBox::indicator {
    width: 16px; height: 16px;
}
QCheckBox::indicator:unchecked {
    border: 1px solid #9ca3af;
    border-radius: 4px;
    background: #ffffff;
}
QCheckBox::indicator:checked {
    border: 1px solid #2563eb;
    background: #2563eb;
    border-radius: 4px;
}

/* Buttons */
QPushButton {
    padding: 8px 14px;
    border-radius: 10px;
    background: #2563eb;
    color: #ffffff;
    border: none;
    font-weight: 600;
}
QPushButton:hover   { background: #1d4ed8; }
QPushButton:pressed { background: #1e40af; }
QPushButton:disabled{ background: #93c5fd; color: #e5e7eb; }

/* =========================
   Scrollbars
   ========================= */
QScrollArea { background: transparent; }

QScrollBar:vertical {
    width: 10px;
    background: transparent;
    margin: 4px 2px 4px 2px;
}
QScrollBar::handle:vertical {
    background: rgba(0,0,0,0.20);
    min-height: 24px;
    border-radius: 6px;
}
QScrollBar::handle:vertical:hover { background: rgba(0,0,0,0.30); }
QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical { height: 0; }

QScrollBar:horizontal {
    height: 10px;
    background: transparent;
    margin: 2px 4px 2px 4px;
}
QScrollBar::handle:horizontal {
    background: rgba(0,0,0,0.20);
    min-width: 24px;
    border-radius: 6px;
}
QScrollBar::handle:horizontal:hover { background: rgba(0,0,0,0.30); }
QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal { width: 0; }

/* =========================
   Availability Pill  (Note: kept at the end to take precedence)
   ========================= */

/* Base — rounded pill with padding */
QFrame#Card QLabel#Pill,
QLabel#Pill {
    padding: 4px 12px;
    min-height: 22px;                 /* ensures enough height for the pill */
    border-radius: 999px;             /* fully rounded corners */
    font-size: 12px;
    font-weight: 600;
    border: 1px solid transparent;
    qproperty-alignment: 'AlignCenter';
}

/* Available */
QFrame#Card QLabel#Pill[ok="true"],
QLabel#Pill[ok="true"] {
    color: #166534;                   /* green-800 */
    background-color: #e8f5ec;        /* soft green */
    border: 1px solid #bbdfc7;
    border-radius: 999px;
}

/* Unavailable */
QFrame#Card QLabel#Pill[ok="false"],
QLabel#Pill[ok="false"] {
    color: #92400e;                   /* amber-800 */
    background-color: #fff7ed;        /* soft amber */
    border: 1px solid #fde0c2;
    border-radius: 999px;
}

/* ===== Availability Pill — FINAL OVERRIDE ===== */
QFrame#Card QLabel#Pill,
QLabel#Pill {
    qproperty-autoFillBackground: true;   /* force background painting */
    padding: 4px 12px;
    min-height: 22px;
    border: 2px solid #bbdfc7;            /* clear border to verify radius */
    border-radius: 16px;                   /* soft corners */
    font-size: 12px;
    font-weight: 600;
    qproperty-alignment: 'AlignCenter';
    background-color: #e8f5ec;            /* greenish default */
    color: #166534;
}

/* Available/Unavailable — if state changes, colors swap but radius remains */
QFrame#Card QLabel#Pill[ok="true"],
QLabel#Pill[ok="true"] {
    background-color: #e8f5ec;
    border-color: #bbdfc7;
    color: #166534;
    border-radius: 16px;
}

QFrame#Card QLabel#Pill[ok="false"],
QLabel#Pill[ok="false"] {
    background-color: #fff7ed;
    border-color: #fde0c2;
    color: #92400e;
    border-radius: 16px;
}